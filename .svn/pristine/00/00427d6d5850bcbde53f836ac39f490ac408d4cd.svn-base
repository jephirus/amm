var today = new Date();
var day = today.getDate();
var week;
switch (today.getDay()) {
case 1:
	week = "星期一";
	break;
case 2:
	week = "星期二";
	break;
case 3:
	week = "星期三";
	break;
case 4:
	week = "星期四";
	break;
case 5:
	week = "星期五";
	break;
case 6:
	week = "星期六";
	break;
default:
	week = "星期天";
}
var month = today.getMonth() + 1;
var year = today.getFullYear();
var date = year + "年" + month + "月" + day + "日 " + week;
document.write(date);